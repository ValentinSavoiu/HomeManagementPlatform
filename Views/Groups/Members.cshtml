@model mss_project.Models.MembersAdminViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (Model.bIsOwner)
{
    using (Html.BeginForm("AddMember", "Groups"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <p>email:</p>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.GroupID)
            <div class="form-group row">
                <div class="col-md-10">

                    @Html.Editor("email", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add New Member" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
}
<table class="table">
    <tr>
        <th>
            @("Member username")
        </th>
        <th>
            @("Nickname")
        </th>
        <th></th>
    </tr>

    @for (int i = 0; i < Model.ListGroupNicknames.Count; i++)
    {
        <tr>
            <td>
                @(Model.GroupUsers[i])
            </td>
            <td>
                @(Model.ListGroupNicknames[i])
            </td>

            @if (Model.bIsOwner)
            {
                <td>
                    @Html.ActionLink("Edit Nickname", "EditNickname", new { id = Model.MembersID[i], GroupID = Model.GroupID })
                </td>
                <td>
                    @using (Html.BeginForm("Kick", "Groups", new { memberID = Model.MembersID[i], id_group = Model.GroupID }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions red">
                            <input type="submit" value="KICK" class="btn btn-primary" />
                        </div>
                    }
                </td>
            }
        </tr>
    }

</table>
