@model mss_project.Models.EditNicknameViewModel

<h2>Change Nickname - @(Model.MemberUsername)</h2>

@using (Html.BeginForm("EditNickname", "Groups", new { Group_ID = Model.CurrentMember.Group_ID, AppUser_ID = Model.CurrentMember.AppUser_ID }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group row">
        <div class="col-md-10">
            @Html.Editor("NickName", new { htmlAttributes = new { @class = "form-control", @Value = Model.CurrentMember.NickName } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Members", "Members", new { id = Model.CurrentMember.Group_ID })
</div>
