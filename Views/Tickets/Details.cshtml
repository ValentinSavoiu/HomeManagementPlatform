@using mss_project.Helpers

@model mss_project.Models.Ticket

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Ticket</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @EnumHelpers.DisplayName(Model.Status)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd style="white-space:pre;">@Html.DisplayFor(model => model.Description)</dd>

        <dt>
            @Html.DisplayNameFor(model => model.Creator)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Creator.FullName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Assignees) @Html.ActionLink("Change", "ChangeAssignees", new { id = Model.TicketID })
        </dt><dd>
            @foreach (var assignee in Model.Assignees)
            {
                @(assignee.FullName)<br />
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.TicketID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
